{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cdw/client/components": ["libs/client/components/src/index.ts"],
      "@cdw/client/database": ["libs/client/database/src/index.ts"],
      "@cdw/client/pages": ["libs/client/pages/src/index.ts"],
      "@cdw/client/state": ["libs/client/state/src/index.ts"],
      "@cdw/rapi-doc-react": ["libs/rapi-doc-react/src/index.ts"],
      "@cdw/server/database": ["libs/server/database/src/index.ts"],
      "@cdw/testing": ["libs/testing/src/index.ts"],
      "@cdw/types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
